<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context=".Vaccinated">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/edtVaccinatedSearch"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:hint="@string/search"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_baseline_search_24dp"
        android:drawableStart="@drawable/ic_baseline_search_24dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listViewVaccinated"
        android:layout_below="@id/edtVaccinatedSearch"
        android:layout_margin="10dp"/>

    <com.leo.simplearcloader.SimpleArcLoader
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/vacloader"
        app:arc_style="simple_arc"
        android:visibility="visible"
        android:layout_centerInParent="true" />

</RelativeLayout>